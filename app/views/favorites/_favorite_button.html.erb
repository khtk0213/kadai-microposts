<% if current_user.favorites.find_by(user_id: user.id,micropost_id: micropost.id) %>
  <%= form_for(current_user.favorites.find_by(user_id: user.id,micropost_id: micropost.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'Del favorite', class: 'btn btn-danger btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.favorites.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'Add favorite', class: 'btn btn-primary btn-xs' %>
  <% end %>
<% end %>